{
  "manifest_version": 2,
  "name": "Copy URL and Title",
  "version": "1.0",
  "description": "Copies the current page URL and title to the clipboard.",
  "permissions": ["tabs", "activeTab", "clipboardWrite"],
  "icons": {
    "64": "icon-black.png"
  },
  "browser_action": {
    "theme_icons": [
      {
        "dark": "icon-black.png",
        "light": "icon-white.png",
        "size": 64
      }
    ],
    "default_icon": {
      "64": "icon-white.png"
    },
    "default_title": "Copy URL and Title"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
